{
  "name": "opencode-pty",
  "module": "index.ts",
  "version": "0.1.5",
  "description": "OpenCode plugin for interactive PTY management - run background processes, send input, read output with regex filtering",
  "author": "shekohex",
  "keywords": [
    "opencode",
    "opencode-plugin",
    "pty",
    "pseudo-terminal",
    "terminal",
    "background-process",
    "interactive",
    "cli",
    "shell",
    "dev-server",
    "bun"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shekohex/opencode-pty.git"
  },
  "bugs": {
    "url": "https://github.com/shekohex/opencode-pty/issues"
  },
  "homepage": "https://github.com/shekohex/opencode-pty#readme",
  "files": [
    "index.ts",
    "src",
    "dist"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    "./shared/types": "./src/web/shared/types.ts",
    "./shared/constants": "./src/web/shared/constants.ts",
    "./shared/logger": "./src/web/shared/logger.ts",
    "./src/plugin/pty/manager": "./src/plugin/pty/manager.ts",
    "./src/plugin/logger": "./src/plugin/logger.ts",
    "./server": "./src/web/server/server.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test:e2e": "PW_DISABLE_TS_ESM=1 NODE_ENV=test bun --bun playwright test",
    "test:all": "bun test && bun run test:e2e",
    "build": "bun run clean && vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "prepack": "bun run build:prod",
    "install:web:dev": "bun run build:dev",
    "install:all:dev": "bun run install:web:dev",
    "run:all:dev": "bun run install:all:dev && LOG_LEVEL=silent opencode",
    "clean": "rm -rf dist playwright-report test-results",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "bun run lint && bun run format:check && bun run typecheck"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@types/bun": "^1.3.6",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.3.4",
    "jsdom": "^27.4.0",
    "playwright-core": "1.57.0",
    "prettier": "^3.8.1",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.47",
    "@opencode-ai/sdk": "1.1.47",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-serialize": "^0.14.0",
    "@xterm/xterm": "^6.0.0",
    "bun-pty": "^0.4.8",
    "moment": "^2.30.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "strip-ansi": "^7.1.2"
  }
}
