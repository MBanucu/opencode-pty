{
  "name": "opencode-pty",
  "module": "index.ts",
  "version": "0.1.5",
  "description": "OpenCode plugin for interactive PTY management - run background processes, send input, read output with regex filtering",
  "author": "shekohex",
  "keywords": [
    "opencode",
    "opencode-plugin",
    "pty",
    "pseudo-terminal",
    "terminal",
    "background-process",
    "interactive",
    "cli",
    "shell",
    "dev-server",
    "bun"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shekohex/opencode-pty.git"
  },
  "bugs": {
    "url": "https://github.com/shekohex/opencode-pty/issues"
  },
  "homepage": "https://github.com/shekohex/opencode-pty#readme",
  "files": [
    "index.ts",
    "src",
    "dist"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/*.ts",
    "./*/*": "./src/*/*.ts",
    "./*/*/*": "./src/*/*/*.ts",
    "./*/*/*/*": "./src/*/*/*/*.ts",
    "./*/*/*/*/*": "./src/*/*/*/*/*.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test:e2e": "PW_DISABLE_TS_ESM=1 NODE_ENV=test bun --bun playwright test",
    "test:all": "bun test && bun test:e2e",
    "build:dev": "bun clean && vite build --mode development",
    "build:prod": "bun clean && vite build --mode production",
    "prepack": "bun build:prod",
    "clean": "rm -rf dist playwright-report test-results",
    "lint": "biome lint",
    "lint:write": "biome lint --write",
    "format": "biome format",
    "format:write": "biome format --write",
    "check": "biome check",
    "check:ci": "biome ci",
    "quality": "bun check && bun typecheck"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@types/bun": "^1.3.6",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "happy-dom": "^20.3.4",
    "jsdom": "^27.4.0",
    "playwright-core": "1.57.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.47",
    "@opencode-ai/sdk": "1.1.47",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-serialize": "^0.14.0",
    "@xterm/xterm": "^6.0.0",
    "bun-pty": "^0.4.8",
    "moment": "^2.30.1",
    "open": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "strip-ansi": "^7.1.2"
  }
}
